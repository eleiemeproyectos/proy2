function createCoder():ITransducer begin
	
	
	Q:= {⟨a,b,c,d,e,f,pos⟩ |a in('a'‥'d'),b in('a'‥'d'),c in('a'‥'d'),d in('a'‥'d'),e in('a'‥'d'),f in('a'‥'d'), 0 <= pos < 4  }  ∪ {"I","E","F"} 
	
	Σ :=('a'‥'d')∪{'&',' '}
	Σ´:=Σ∪{ '*'}
	q₀:= "I"
	F:=	 {"F"}

	return 	GDeterministicTransducer(Q,Σ,Σ´,q₀,F,δ,g,h)
end

	
	
	
